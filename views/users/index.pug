extends ../layouts/common.pug
block content
    h1 Users
        span 
            a.btn.btn-primary(href="/users/create") New
    .d-flex
        form.ml-auto(action="/users/search", method="GET", class="d-flex")
            input(type="text" name="q" class="form-control" id="input-field")
            button(class="btn btn-primary ml-2") Search
    table.table
        tr  
            th Avatar
            th Name
            th Phone
            th Action
        each user in users 
            tr
                td
                    img(src=user.avatar, alt="", width="60px")
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href="/users/" + user.id) View 
    script
        include script.js