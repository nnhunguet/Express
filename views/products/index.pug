extends ../layouts/common.pug
block content
    h1 Products
    .d-flex
        form.ml-auto(action="/product", method="GET", class="d-flex")
            input(type="text" name="q" class="form-control" id="input-field")
            button(class="btn btn-primary ml-2") Search
    .row.row-cols-1.row-cols-md-4
        each product in products
            .col.mb-3
                .card
                img.card-img-top(src=product.image, alt='...')
                .card-body
                    h5.card-title=product.name
                    p.card-text=product.description
                    a(href="#" class="btn btn-primary") Add to cart

        nav(aria-label='Page navigation example')
            ul.pagination
                if page <= 1 
                    li.page-item.disabled
                        a.page-link(href='?page='+(page-1)) Previous
                    li.page-item.active
                        a.page-link(href='?page='+ 1) 
                            span=1
                    li.page-item
                        a.page-link(href='?page='+2) 
                            span=2
                    li.page-item
                        a.page-link(href='?page='+3)
                            span=3
                    li.page-item
                        a.page-link(href='?page='+2) Next
                if page > 1 
                    li.page-item
                        a.page-link(href='?page='+(page-1)) Previous
                    li.page-item
                        a.page-link(href='?page='+ (page-1)) 
                            span=page-1
                    li.page-item.active
                        a.page-link(href='?page='+page) 
                            span=page
                    li.page-item
                        a.page-link(href='?page='+(page+1))
                            span=page+1
                    li.page-item
                        a.page-link(href='?page='+(page+1)) Next
